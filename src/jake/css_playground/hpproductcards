    <script>
      // Color switcher functionality
      const colorButtons = document.querySelectorAll('.mb-12 button');
      const allImages = document.querySelectorAll('.group img');
      
      colorButtons.forEach(button => {
        button.addEventListener('click', () => {
          const color = button.style.backgroundColor;
          allImages.forEach(img => {
            img.style.filter = `hue-rotate(${getHueRotation(color)})`;
          });
        });
      });

      function getHueRotation(color) {
        const colorMap = {
          'rgb(0, 0, 0)': '0deg',
          'rgb(139, 69, 19)': '30deg',
          'rgb(30, 58, 138)': '240deg',
          'rgb(74, 85, 104)': '180deg'
        };
        return colorMap[color] || '0deg';
      }
    </script>
